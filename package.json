{
  "name": "bem-perfeito",
  "version": "1.0.0",
  "author": "",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "lint": "rome format ./src --write && rome check ./src --verbose",
    "dev": "cross-env NODE_ENV=development node ./esbuild.config.js -w",
    "build": "cross-env NODE_ENV=production node ./esbuild.config.js",
    "start": "pnpm run dev && pnpm run lint",
    "prod": "pnpm run build",
    "api": "json-server --watch api/db.json",
    "test": "node ./esbuild.config.test.js && mocha ./dist/tests/*.js",
    "pretest:watch": "node ./esbuild.config.test.js -w",
    "test:watch": "mocha ./dist/tests/*.js",
    "pretest:coverage": "node ./esbuild.config.test.js",
    "test:coverage": "nyc mocha ./dist/tests/*.js --coverage"
  },
  "aliases": {
    "@/store": [
      "dist/store/index.ts"
    ],
    "@/components/*": [
      "dist/components"
    ],
    "@/utils/*": [
      "dist/utils"
    ],
    "@/services/*": [
      "dist/services"
    ],
    "@/assets/*": [
      "dist/assets"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ]
  },
  "devDependencies": {
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/whatwg-fetch": "^0.0.33",
    "@web/dev-server": "^0.1.35",
    "@web/dev-server-esbuild": "^0.3.3",
    "@web/test-runner": "^0.15.1",
    "@web/test-runner-mocha": "^0.7.5",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "esbuild": "^0.15.18",
    "esbuild-copy-files-plugin": "^1.1.0",
    "esbuild-plugin-dev-server": "^1.1.3",
    "esbuild-plugin-glob": "^2.2.1",
    "esbuild-plugin-import-glob": "^0.1.1",
    "esbuild-plugin-path-alias": "^1.0.7",
    "esbuild-runner": "^2.2.2",
    "esbuild-serve": "^1.0.1",
    "esm-module-alias": "^2.0.3",
    "http-server": "^14.1.1",
    "install-peerdeps": "^3.0.3",
    "json-server": "^0.17.1",
    "koa-proxies": "^0.12.3",
    "live-server": "^1.2.2",
    "mocha": "^10.2.0",
    "module-alias": "^2.2.2",
    "nyc": "^15.1.0",
    "rome": "^11.0.0",
    "shx": "^0.3.4",
    "tiny-glob": "^0.2.9",
    "ts-node": "^10.9.1",
    "ts-node-esm": "^0.0.6",
    "tsc-alias": "^1.8.3",
    "typescript": "^4.9.5",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "htm": "^3.1.1",
    "iares": "workspace:1.0.0",
    "zod": "^3.21.2",
    "zod-fetch": "^0.1.0"
  }
}