{
  "name": "bem-perfeito",
  "version": "1.0.0",
  "author": "",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "lint": "rome format ./src --write && rome check ./src --verbose",
    "dev": "cross-env NODE_ENV=development node ./esbuild.config.js",
    "build": "cross-env NODE_ENV=production node ./esbuild.config.js",
    "start": "pnpm run dev && pnpm run lint",
    "prod": "pnpm run build",
    "api": "json-server --watch api/db.json",
    "test": "node ./esbuild.config.test.js",
    "posttest": "web-test-runner --config",
    "coverage": "node ./esbuild.config.test.js",
    "postcoverage": "nyc --reporter=html --reporter=text mocha ./dist/tests"
  },
  "aliases": {
    "@/store": [
      "dist/store/index.ts"
    ],
    "@/components/*": [
      "dist/components"
    ],
    "@/utils/*": [
      "dist/utils"
    ],
    "@/services/*": [
      "dist/services"
    ],
    "@/assets/*": [
      "dist/assets"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ]
  },
  "devDependencies": {
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@microsoft/fetch-event-source": "^2.0.1",
    "@swc/core": "^1.3.39",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/whatwg-fetch": "^0.0.33",
    "@web/dev-server": "^0.1.35",
    "@web/dev-server-esbuild": "^0.3.3",
    "@web/test-runner": "^0.15.1",
    "@web/test-runner-mocha": "^0.7.5",
    "cross-env": "^7.0.3",
    "esbuild": "^0.17.11",
    "esbuild-copy-files-plugin": "^1.1.0",
    "esbuild-plugin-dev-server": "^1.1.3",
    "esbuild-plugin-path-alias": "^1.0.7",
    "esbuild-runner": "^2.2.2",
    "esbuild-serve": "^1.0.1",
    "esm-module-alias": "^2.0.3",
    "http-server": "^14.1.1",
    "install-peerdeps": "^3.0.3",
    "json-server": "^0.17.1",
    "mocha": "^10.2.0",
    "module-alias": "^2.2.2",
    "nyc": "^15.1.0",
    "rome": "^11.0.0",
    "shx": "^0.3.4",
    "typescript": "^4.9.5",
    "watcher": "^2.2.2"
  },
  "dependencies": {
    "htm": "^3.1.1",
    "iares": "workspace:1.0.0"
  }
}