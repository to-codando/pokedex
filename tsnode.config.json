{
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM"
    ],
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@/store": [
        "dist/store/index.ts"
      ],
      "@/components/*": [
        "dist/components/*"
      ],
      "@/utils/*": [
        "dist/utils/*"
      ],
      "@/services/*": [
        "dist/services/*"
      ],
      "@/assets/*": [
        "dist/assets/*"
      ],
      "@/tests/*": [
        "dist/tests/*"
      ]
    },
    "strict": true,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "target": "es2018",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/tests/*.ts",
    "src/components/*.ts"
  ],
  "exclude": [
    "node_modules",
    "iares"
  ]
}